{% extends 'AppBundle::admin.html.twig' %}

{% block content -%}
    <h1>City</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_city') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_city_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    {% if (entity.id) %}
    <li>{{ form(delete_form) }}</li>
    {% endif %}
</ul>
{% endblock %}
