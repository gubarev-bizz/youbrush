{% extends 'AppBundle::admin.html.twig' %}

{% block content -%}
    <h1>User</h1>

    <table class="table-bordered table record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Skills</th>
                <td>
                    {% for skills in entity.skills%}
                        {{ skills }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
        </tbody>
    </table>



        <ul class="record_actions">
    <li>
        <a href="{{ path('youbrush_admin_user_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('youbrush_admin_user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
